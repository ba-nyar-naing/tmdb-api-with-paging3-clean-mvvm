<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.banyar.presentation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TMDB"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TMDBAPIWithPaging3CleanMVVM">
        <activity
            android:name="com.banyar.presentation.ui.listing.ListingActivity"
            android:exported="true" />
        <activity
            android:name="com.banyar.presentation.ui.detail.DetailActivity"
            android:exported="true" />
        <activity
            android:name="com.banyar.presentation.ui.home.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>