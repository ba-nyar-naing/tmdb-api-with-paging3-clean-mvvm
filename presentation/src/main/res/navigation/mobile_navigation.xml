<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/desc_home">

    <fragment
        android:id="@+id/desc_home"
        android:name="com.banyar.presentation.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/desc_listing"
        android:name="com.banyar.presentation.ui.listing.ListingFragment"
        android:label="fragment_listing"
        tools:layout="@layout/fragment_listing">
        <action
            android:id="@+id/action_listing_to_detail"
            app:destination="@id/desc_detail" />
    </fragment>

    <fragment
        android:id="@+id/desc_detail"
        android:name="com.banyar.presentation.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" />

    <fragment
        android:id="@+id/desc_favourite"
        android:name="com.banyar.presentation.ui.favourite.FavouriteFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favourite" />

</navigation>