<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/desc_popular">

    <fragment
        android:id="@+id/desc_popular"
        android:name="com.banyar.presentation.ui.popular.PopularFragment"
        android:label="fragment_popular"
        tools:layout="@layout/fragment_popular">
        <action
            android:id="@+id/action_popular_to_detail"
            app:destination="@id/desc_detail" />
    </fragment>

    <fragment
        android:id="@+id/desc_detail"
        android:name="com.banyar.presentation.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" />

    <fragment
        android:id="@+id/desc_favourite"
        android:name="com.banyar.presentation.ui.favourite.FavouriteFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favourite" />

</navigation>